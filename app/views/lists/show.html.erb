<h1><%= @list.title %></h1>

<h3>Tasks</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Due Date</th>
  </tr>
  <% @list.tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= task.due_date %></td>
  </tr>
  <% end %>
</table>

<h3>New Task</h3>
<%= form_for([@list, @task]) do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :due_date %>
  <%= f.select_date(:date, :order => [:month, :day, :year]) %>
</div>
<% end %>

<div>
  <p><%= link_to "Edit list", edit_list_path(id: @list.id) %></p>
  <p><%= link_to "Delete list", list_path(id: @list.id), method: :delete %></p>
</div><br />

